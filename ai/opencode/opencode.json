{
    "$schema": "https://opencode.ai/config.json",
    "mcp": {
        "chrome": {
            "command": [
                "npx",
                "-y",
                "chrome-devtools-mcp@latest"
            ],
            "enabled": true,
            "type": "local"
        },
        "jam": {
            "enabled": true,
            "type": "remote",
            "url": "https://mcp.jam.dev/mcp"
        },
        "playwright": {
            "command": [
                "npx",
                "@playwright/mcp@latest"
            ],
            "enabled": true,
            "type": "local"
        },
    },
    "permission": {
        "skill": {
            "code-review-analyzer": "allow",
            "code-review-resolver": "ask"
        }
    },
    "plugin": [
        "@mohak34/opencode-notifier@0.1.15"
    ],
    "provider": {
        "ollama": {
            "npm": "@ai-sdk/openai-compatible",
            "name": "Ollama",
            "options": {
                "baseURL": "http://localhost:11434/v1",
                "apiKey": "ollama"
            },
            "models": {
                "qwen2.5-coder:7b": {
                    "name": "Qwen 2.5 coder 7B",
                }
            }
        }
    }
}