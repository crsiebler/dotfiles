{
    "$schema": "https://opencode.ai/config.json",
    "mcp": {
        "chrome": {
            "command": [
                "npx",
                "-y",
                "chrome-devtools-mcp@latest"
            ],
            "enabled": true,
            "type": "local"
        },
        "jam": {
            "enabled": true,
            "type": "remote",
            "url": "https://mcp.jam.dev/mcp"
        },
        "playwright": {
            "command": [
                "npx",
                "@playwright/mcp@latest"
            ],
            "enabled": true,
            "type": "local"
        },
    },
    "permission": {
        "skill": {
            "code-review-analyzer": "allow",
            "code-review-resolver": "ask"
        }
    },
    "plugin": [
        "@mohak34/opencode-notifier@0.1.15"
    ]
}